<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Produtos"
        android:gravity="center"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:textSize="25sp"></TextView>
    <EditText
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Produto"
        android:layout_margin="10sp"></EditText>
    <EditText
        android:id="@+id/txtPrecoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço de Custo"
        android:inputType="numberDecimal"
        android:layout_margin="10sp"></EditText>
    <EditText
        android:id="@+id/txtPrecoV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço de Venda"
        android:inputType="numberDecimal"
        android:layout_margin="10sp"></EditText>
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"></Button>
    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpar"></Button>
    <Button
        android:id="@+id/btnAbrir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir"></Button>
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"></Button>



</LinearLayout>